<%- include('layout/navbar') %>
<%- include('layout/header') %>

<section class="container-fluid row d-flex flex-wrap justify-content-between p-3" 
    style="backdrop-filter: blur(10px); background-size: cover; background-position: center; background-attachment: fixed; background-repeat: no-repeat;">

   <!-- Search Bar -->
<div class="mb-3 col-12 d-flex justify-content-center container">
    <input type="text" id="<%= roleToFetch %>SearchInput" class="form-control text-center" 
        style="max-width: 500px;" placeholder="Search <%= roleToFetch || 'tutors' %>...">
</div>

    <!-- Filter Form -->
    <form action="/listingof<%= roleToFetch || 'tutor' %>?" method="GET" id="filterForm" class="col-md-3 p-4 rounded shadow-sm bg-white">
        <h5 class="text-center text-primary mb-3">Filter <%= roleToFetch || 'Tutors' %></h5>

        <!-- Class/Grade -->
        <div class="mb-3">
            <label class="form-label fw-bold">Class</label>
            <select class="form-control" id="course" name="classFilter">
                <option value="" disabled selected>Select Class/Grade</option>
                <% for (let i = 1; i <= 12; i++) { %>
                    <option value="<%= i %>">Class <%= i %></option>
                <% } %>
            </select>
        </div>

        <!-- Subject -->
        <div class="mb-3">
            <label class="form-label">Subject</label>
            <input type="text" id="subject" name="subjectFilter" placeholder="Enter subject" class="form-control">
        </div>

        <!-- City -->
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" id="city" name="city" placeholder="Enter city" class="form-control">
        </div>

        <!-- Pincode -->
        <div class="mb-3">
            <label class="form-label">Pincode</label>
            <input type="number" id="pincode" name="pincode" placeholder="Enter pincode" class="form-control">
        </div>

      

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-success w-100">Search</button>
        </div>
    </form>

    <!-- Cards Section -->
    <div class="col-md-9">
        <div class="row g-3">
            <% if (requirements.length > 0) { %>
                <% requirements.reverse().forEach(tutor => { %>
                    <% if (tutor && tutor.userId.role== "tutor" && tutor.status == "active") { %>
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
                            <div class="card border-0 shadow-sm p-2"
                                 style="border-radius: 10px; box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.08); transition: transform 0.2s ease-in-out; width: 100%;"
                                 onmouseover="this.style.transform='translateY(-3px)'"
                                 onmouseout="this.style.transform='translateY(0)'">
                                
                                <!-- Featured Badge -->
                                <div class="position-absolute top-0 start-0 bg-warning text-dark rounded fw-bold px-1"
                                     style="font-size: 10px; padding: 3px 5px;">
                                    â˜… Featured
                                </div>
        
                                <!-- Profile Info -->
                                <div class="d-flex align-items-center mb-2">
                                    <img src="<%= tutor.userId.profileImg || '/user/images/profile.png' %>" 
                                         class="rounded-circle me-2"
                                         style="width: 40px; height: 40px;">
                                    <div>
                                        <h6 class="text-primary m-0" style="font-size: 14px; font-weight: bold;">
                                            <%= tutor.userId.name || "Unknown" %>
                                        </h6> 
                                        <small style="font-size: 12px; color: #666;">
                                            <p class="mb-0"><span><%= tutor.userId.randomId || "Unknown" %></span></p>
                                            Exp: <%= tutor.experience || "N/A" %> Y | Age: <%= tutor.age || "N/A" %> 
                                        </small>
                                        <p style="font-size: 12px; color: #666; margin-bottom: 4px;">
                                             <b> <%= tutor.preferredTutor || "N/A" %></b>
                                        </p>
                                    </div>
                                </div>
                                <p style="font-size: 12px; color: #666; margin-bottom: 4px;">
                                    <b> class :</b> <%= tutor.class || "N/A" %>
                               </p>
                                <!-- Location -->
                                <p style="font-size: 12px; color: #666; margin-bottom: 4px;">
                                    <i class="fas fa-map-marker-alt"></i> <strong>Location:</strong> 
                                    <%= (tutor.city || "Not specified").toLowerCase().replace(/\b\w/g, char => char.toUpperCase()) %>, 
                                    <%= (tutor.state || "Not specified").toLowerCase().replace(/\b\w/g, char => char.toUpperCase()) %>,
                                  
                                </p>
                                <p style="font-size: 12px; color: #666; margin-bottom: 4px;"><b> Pin:</b> <%= tutor.pincode || "Not specified" %></p>
                                
        
                                <!-- Qualification -->
                                <p style="font-size: 12px; color: #666; margin-bottom: 4px;">
                                    <i class="fas fa-graduation-cap"></i> <strong>Qualification:</strong> 
                                    <%= tutor.qualification || "N/A" %>
                                </p>
        
                                <!-- Subjects -->
                                <p style="font-size: 12px; color: #666; margin-bottom: 4px;">
                                    <i class="fas fa-book"></i> <strong>Subjects:</strong>  
                                    <%= tutor.subject || "Various" %>
                                </p>
        
                                <!-- Buttons -->
                                <div class="text-center" style="display: flex; justify-content: space-between;">
                                    <a href="/userDetails/<%= tutor._id %>" 
                                       class="btn btn-primary mt-1" 
                                       style="font-size: 10px; padding: 4px 6px; border-radius: 6px; flex: 1; margin-right: 4px;">
                                        View Profile
                                    </a>
        
                                    <a href="/primum" 
                                       class="btn btn-success mt-1" 
                                       style="font-size: 10px; padding: 4px 6px; border-radius: 6px; flex: 1;">
                                        Free Demo
                                    </a>
                                </div>
        
                            </div>
                        </div>
            <% } else { %>
                 <!-- Four cards per row: 25% width each (minus 20px gap) -->
                 <div class="col-md-9">
                    <div class="row g-2">
                     
                        <div class="col-12 col-sm-6 col-md-3">
                          <div class="card p-2 shadow-sm" style="font-size: 14px;">
                            
                            <p class="text-muted small mb-1">
                              <i class="far fa-calendar-alt"></i> 
                              <%= tutor.createdAt.toDateString().split(' ').slice(1, 4).join(' ') %>
                            </p>
                  
                            <h6 class="text-primary mb-1">
                              <a href="#" class="text-decoration-none">tutor Looking for Tutor...</a>
                            </h6>
                  
                            <p class="fw-bold mb-1" style="font-size: 13px;">
                              <%= tutor.userId.name %> | Class: <%= tutor.class %>
                            </p>
                  
                            <p class="text-muted small mb-1">
                              <i class="fas fa-clock"></i> <%= Array.isArray(tutor.preferredTime) ? tutor.preferredTime.join(", ") : tutor.preferredTime %> | 
                              <i class="fas fa-map-marker-alt"></i> <%= tutor.location %>
                            </p>
                  
                            <p class="text-danger fw-bold small mb-1">
                              Preferred Tutor: <%= tutor.preferredTutor %>
                            </p>
                  
                            <p class="small mb-1">
                              <i class="fas fa-book"></i> <%= tutor.subject %> | <%= tutor.board %>
                            </p>
                  
                            <p class="small mb-1">
                              <i class="fas fa-graduation-cap"></i> ID: <b><%= tutor.userId.randomId %></b>
                            </p>
                  
                           
                            <p class="small mb-1">
                              <i class="fas fa-map-marker-alt"></i> 
                              <%= tutor.city.charAt(0).toUpperCase() + tutor.city.slice(1).toLowerCase() %>, 
                              <%= tutor.state.charAt(0).toUpperCase() + tutor.state.slice(1).toLowerCase() %> 
                              (Pin: <%= tutor.pincode %>)
                            </p>
                            
                  
                            <div class="bg-light p-1 text-center small rounded">
                              <%= tutor.status === 'Matched' ? 'Tutor Found' : 'Tutor Not Found' %>
                            </div>
                  
                            <div class="d-flex gap-1 mt-2">
                              <a href="/userDetails/<%= tutor._id %>" class="btn btn-sm btn-primary w-50">VIEW</a>
                              <button class="btn btn-sm btn-success w-50">APPLY</button>
                            </div>
                  
                          </div>
                        </div>
                      
                    </div>
                  </div>
            <% } %>
        <% }) %>
            <% } %>
        </div>
    </div>
</section>

<!-- Pagination -->
<% 
const query = new URLSearchParams(queryParams); 
query.delete("page"); 
const queryString = query.toString() ? `&${query.toString()}` : ""; 
%>

<div class="d-flex justify-content-center mt-4">
    <nav>
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %><%= queryString %>">Previous</a>
                </li>
            <% } %>
            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= (currentPage === i) ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %><%= queryString %>"><%= i %></a>
                </li>
            <% } %>
            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %><%= queryString %>">Next</a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<script>
      document.addEventListener("DOMContentLoaded", function () {
    const searchInput = document.getElementById("<%= roleToFetch %>SearchInput");
    const cardContainers = document.querySelectorAll(".col-lg-4, .col-md-6, .col-lg-3, .col-md-4, .col-sm-6");

    searchInput.addEventListener("input", function () {
        const searchText = searchInput.value.trim().toLowerCase();
        const searchTerms = searchText.split(",").map(term => term.trim()); // Split search terms by comma

        cardContainers.forEach(container => {
            const name = container.querySelector("h5")?.textContent.toLowerCase() || "";
            const subject = container.querySelector(".fa-book + strong")?.nextSibling?.textContent.trim().toLowerCase() || "";
            const city = container.querySelector(".fa-map-marker-alt")?.parentNode?.textContent.trim().toLowerCase() || "";
            const state = container.querySelector(".fa-map-marker-alt + strong")?.nextSibling?.textContent.trim().toLowerCase() || "";
            const pincode = container.querySelector(".fa-map-marker-alt + strong + strong")?.nextSibling?.textContent.trim().toLowerCase() || "";
            const randomId = container.querySelector(".fa-graduation-cap + strong")?.nextSibling?.textContent.trim().toLowerCase() || "";

            const cardText = `${name} ${subject} ${city} ${state} ${pincode} ${randomId}`;

            // Check if at least one search term matches
            const isMatch = searchTerms.some(term => cardText.includes(term));
            container.style.display = isMatch ? "block" : "none";
        });
    });
});


    </script>
    


<%- include('layout/footer') %>
