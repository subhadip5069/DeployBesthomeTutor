        <img src="/user/images/teacher[1].jpg" alt="picture">
    </div>
    <div class="tuition-reg-container">
        <div class="tuition-reg-toggle">
            <h2>I am</h2>
            <input type="radio" id="tuition-reg-student" name="userType" value="student" checked>
            <label for="tuition-reg-student">Student/Parent</label>

            <input type="radio" id="tuition-reg-tutor" name="userType" value="tutor">
            <label for="tuition-reg-tutor">Tutor</label>
        </div>

        <!-- Student/Parent Form -->
        <form action="/auth/signup" method="post" enctype="multipart/form-data">
            <div id="tuition-reg-studentForm" class="tuition-reg-form-section tuition-reg-active">
                <h1>Find the perfect tutor for your child!</h1>
                <input type="text" placeholder="Name" name="name" required>
                <input type="number" placeholder="Mobile Number" name="phone" required>
                <input type="email" placeholder="Enter Email" name="email" required>
                <input type="password" placeholder="Enter Password" name="password" required>
                <input type="password" placeholder="Confirm Password" name="password2" required>
                <input type="hidden" name="role" value="student">
                

                <div class="checkbox-container">
                    <input type="checkbox" id="terms-student" required>
                    <label for="terms-student">By Signing up you agree to our <a href="/terms&condition">Terms & conditions</a></label>
                </div>

                <button type="submit">Get Free Demo Class</button>

                <p>Already a member? <a href="">Login</a></p>
            </div>
        </form>

        <!-- Tutor Form -->
        <form action="/auth/signup" method="post" enctype="multipart/form-data">
            <div id="tuition-reg-tutorForm" class="tuition-reg-form-section">
                <h1>Connect with students & start teaching!</h1>
                <input type="text" placeholder="Name" name="name" required>
                <input type="number" placeholder="Mobile Number" name="phone" required>
                <input type="email" placeholder="Enter Email" name="email" required>
                <input type="password" placeholder="Enter Password" name="password" required>
                <input type="password" placeholder="Confirm Password" name="password2" required>
                <input type="hidden" name="role" value="tutor">
                <input type="file" name="profileImage" >
                <div class="checkbox-container">
                    <input type="checkbox" id="terms-tutor" required>
                    <label for="terms-tutor">By Signing up you agree to our <a href="/terms&condition">Terms & conditions</a></label>
                </div>

                <button type="submit">Find Students Now!</button>

                <p>Already a member? <a href="">Login</a></p>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const studentRadio = document.getElementById("tuition-reg-student");
        const tutorRadio = document.getElementById("tuition-reg-tutor");
        const studentForm = document.getElementById("tuition-reg-studentForm");
        const tutorForm = document.getElementById("tuition-reg-tutorForm");

        function toggleForm() {
            if (studentRadio.checked) {
                studentForm.classList.add("tuition-reg-active");
                tutorForm.classList.remove("tuition-reg-active");
            } else {
                tutorForm.classList.add("tuition-reg-active");
                studentForm.classList.remove("tuition-reg-active");
            }
        }

        studentRadio.addEventListener("change", toggleForm);
        tutorRadio.addEventListener("change", toggleForm);

        // Ensure the correct form is shown on page load
        toggleForm();
    });
</script>

